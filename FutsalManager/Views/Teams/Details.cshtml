@model Team

@{
    ViewData["Title"] = "Details";
}

<div>
    <!-- INFORMATIONS ABOUT TEAM -->
    <div class="row border border-dark rounded-1 m-2 p-1">
        <i class="text-muted">
            <h4>Details</h4>
        </i>
        <div class="col-sm-12 col-md-4 text-center">
            <img src="@("~/uploads/teams/logos/" + Model.LogoPath)" asp-append-version="true" class="w-75 rounded" alt="team's logo">
            <h6 class="mt-3 mb-3">Team Rating: @TeamFunctions.GetOverallRating(Model)</h6>
        </div>
        <div class="col-sm-12 col-md-8 text-center">
            <h4>
                @Html.DisplayFor(model => model.Name)
            </h4>
            <hr class="w-75"/>
            <div class="row">
                <div class="col rounded-3 d-flex justify-content-center flex-column align-items-center m-3 p-1"
                     style="background-color: rgba(0,123,255,.7);color: white">
                    <strong>
                        @Html.DisplayNameFor(model => model.City)
                    </strong>

                    <hr class="w-50" style="color:rgba(0,0,0,0.5)"/>
                    @Html.DisplayFor(model => model.City)
                </div>
                <div class="col rounded-3 d-flex justify-content-center flex-column align-items-center m-3 p-1"
                     style="background-color: rgba(0,123,255,.7);color: white">
                    <strong>
                        @Html.DisplayNameFor(model => model.Email)

                    </strong>
                    <hr class="w-50" style="color:rgba(0,0,0,0.5)"/>
                    @Html.DisplayFor(model => model.Email)
                </div>
                <div class="col rounded-3 d-flex justify-content-center flex-column align-items-center m-3 p-1"
                     style="background-color: rgba(0,123,255,.7);color: white">
                    <strong>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </strong>
                    <hr class="w-50" style="color:rgba(0,0,0,0.5)"/>
                    @Html.DisplayFor(model => model.PhoneNumber)
                </div>
            </div>
        </div>
    </div>

    <!-- TEAM'S PLAYRES -->
    <div class="row border border-dark rounded-1 m-2 p-1">
        <i class="text-muted">
            <h4>Team's players</h4>
        </i>
        @if (Model.Players.Any())
        {
            <div class="row">
                @foreach (var player in Model.Players)
                {
                    var nat = player.Nationality[..2].ToLower();

                    <!-- PLAYER CARD -->
                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-4 card d-flex justify-content-center flex-column p-1 m-2" style="max-width: 300px;">
                        <div class="row">
                            <div class="col-12">
                                <!-- PLAYER NAME -->
                                <hr/>
                                <div class="row text-center">
                                    <div class="col-12">
                                        <h4>@player.FullName</h4>
                                    </div>
                                </div>
                                <hr/>
                                <table class="table text-center">
                                    <thead>
                                    <tr>
                                        <th>Rating</th>
                                        <th>Position</th>
                                        <th>Nationality</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td>
                                            @PlayerFunctions.GetOverallRating(player)
                                        </td>
                                        <td>
                                            @player.Position?.Pos
                                        </td>
                                        <td>
                                            <img
                                                src="https://flagcdn.com/96x72/@(nat).png"
                                                width="48"
                                                height="32"
                                                alt="@player.Nationality">
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <a class="btn btn-warning" asp-controller="Players" asp-action="Details" asp-route-id="@player.Id">More information</a>
                    </div>
                }
            </div>
        }
        @if (Model.Players.Count <= 5)
        {
            <a asp-controller="Transfers" asp-action="Index">Transfer players</a>
        }
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>