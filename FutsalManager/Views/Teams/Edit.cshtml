@model Team

@{
    ViewData["Title"] = "Edit";
}

<div class="text-center mt-4 mb-4">
    <h4>Edit @Model.Name</h4>
</div>
<hr/>
<div class="container d-flex flex-column justify-content-center align-items-center">
    <div class="col-md-8">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <article>
                <h5>Set teams's details</h5>
                <p>
                    In this section you can edit the details about team.
                    <br/>
                    <span class="text-muted">Information about team.</span>
                </p>
            </article>
            <hr class="w-50 mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>

            <div class="form-group mt-2 mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 mb-3">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control"/>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 mb-3">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control"/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            @if (string.IsNullOrEmpty(Model.LogoPath))
            {
                <div class="form-group mt-2 mb-3">
                    @(Model.LogoPath = "");
                    <h3>The team need a logo image</h3>
                </div>
            }
            else
            {
                <div class="form-group mt-2 mb-3 text-center">
                    <h3>Current logo</h3>
                    <img src="~/uploads/teams/logos/@Model.LogoPath" alt="team's logo"/>
                </div>
            }

            <div class="form-group mt-2 mb-3">
                <label asp-for="FileModel" class="control-label"></label>
                <input type="file" accept="image/png, image/jpg, image/jpeg, image/jfif" asp-for="FileModel" class="form-control"/>
                <span asp-validation-for="FileModel" class="text-danger"></span>
            </div>

            <div class="form-group mt-2 mb-3 text-center">
                <input type="submit" value="Save" class="btn btn-primary btn-lg m-4"/> |
                <a asp-action="Index" class="btn btn-outline-primary btn-lg m-4">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}